<h1><%= t ".title" %></h1>

<div id="works">
    <% @works.each do |work| %>
        <%= link_to work_path(work), class: "work-card" do %>
            <% if work.images.empty? %>
                <%= image_tag "no_image.png", class: "work-image" %>
            <% else %>
                <%= image_tag work.images.first.file_name, class: "work-image" %>
            <% end %>
                <h3 class="work-title"><%= work.name %></h3>
                <p class="work-description"><%= work.description.slice(0..200) %>...</p>
        <% end %>
    <% end %>
</div>